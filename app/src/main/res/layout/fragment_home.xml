<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gxx.fragment.HomeFragment">

    <LinearLayout
        android:id="@+id/home_fragment_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#37B059"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="8dp">

        <EditText
            android:id="@+id/fragment_home_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/home_search_bac"
            android:drawableLeft="@mipmap/search"
            android:drawablePadding="3dp"
            android:drawableRight="@mipmap/voice"
            android:hint="搜索你想知道的问题"
            android:paddingBottom="8dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingTop="8dp"
            android:singleLine="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:text="提问"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#ffffffff"
            android:background="#00000000"
            android:layout_marginRight="8dp"
            android:gravity="center_vertical"
            android:id="@+id/home_fragment_ask"
             />


    </LinearLayout>
    <com.example.gxx.view.XListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/home_fragment_header"
        android:id="@+id/fragment_home_xlv"
        ></com.example.gxx.view.XListView>

</RelativeLayout>
